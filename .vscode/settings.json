{
  /** Configuration for Code Spell Checker. */
  "cSpell.language": "en",
  "cSpell.words": ["slidev"],

  /** Provide intellisense for Uno CSS directives. */
  "css.customData": [".vscode/unocss.json"],

  /** Use TypeScript version installed within the project for intellisense. */
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  /** Configure default theme for the project. */
  "workbench.colorTheme": "Catppuccin Mocha",

  /** Configure default formatter for different file types. */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[vue]": {
    "editor.defaultFormatter": "Vue.volar"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  }
}

{
  "name": "slidev-theme-codeck",
  "description": "Slidev theme for creating code-related presentations.",
  "version": "0.0.0",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "homepage": "https://github.com/KonradSzwarc/slidev-theme-codeck#readme",
  "bugs": "https://github.com/KonradSzwarc/slidev-theme-codeck/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/KonradSzwarc/slidev-theme-codeck.git"
  },
  "license": "MIT",
  "author": "Konrad Szwarc <konrad.szwarc.dev@gmail.com> (https://github.com/KonradSzwarc)",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "slidev": ">=0.49.0"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png",
    "format": "prettier --write .",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@slidev/types": "^0.49.16"
  },
  "devDependencies": {
    "@slidev/cli": "^0.49.16",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "slidev": {
    "colorSchema": "both",
    "aspectRatio": "16/9",
    "canvasWidth": 980,
    "highlighter": "shiki",
    "defaults": {
      "fonts": {
        "sans": "Inter",
        "mono": "Fira Code"
      }
    }
  }
}
